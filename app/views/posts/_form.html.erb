<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :summary %><br>
  <%= f.text_area :summary %><br><br>

  <%= f.label :body %><br>
  <%= f.text_area :body %><br><br>

  <%= f.label :level %><br>
  <%= f.text_field :level %><br><br>

  <%= f.submit t('posts.save') %>
<% end %>