<%= render 'category_navigation' %>
<h1><%= @category.name %></h1>

<div class="row">
  <div class="col-md-8">
    <%= render 'shared/breadcrumb', category: @category %>
    <section id="posts">
      <%= render @posts %>
      <%== pagy_bootstrap_nav(@pagy).html_safe %>
    </section>
  </div>
  <div class="col-md-4">
    <%= render'shared/submenu' %>
    <%= render'shared/tags' %>
  </div>
</div>

